{
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"wp-coding-standards/wpcs": "^3.0"
	},
	"scripts": {
		"phpcs": "./vendor/bin/phpcs --standard=phpcs.xml --extensions=php ./includes wp-dropzone.php",
		"phpcbf": "./vendor/bin/phpcbf --standard=phpcs.xml --extensions=php ./includes wp-dropzone.php",
		"update-deps": "composer update --with-dependencies",
		"check-updates": "composer outdated"
	}
}
